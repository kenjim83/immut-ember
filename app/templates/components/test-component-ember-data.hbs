<button {{action "addNewListItem"}}>Add New</button>
{{#each list as |list-item li-index|}}
	<section>
		{{list-item.name}}
		<ul>
			{{#each list-item.things as |thing th-index|}}
				<li>
					<input type="text" onchange={{action "editThing" thing}} value={{thing.name}}>
				</li>
			{{/each}}
		</ul>
		<button {{action "deleteListItem" list-item}}>Delete</button>
	</section>
{{/each}}


{{#each list as |list-item|}}
	{{list-item.name}}
	{{#each list-item.things as |thing th-index|}}
		{{thing.name}}
	{{/each}}
{{/each}}